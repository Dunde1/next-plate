{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-console": "warn"
  },
  "env": {
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": "**/*.test.+(jsx|tsx)",
      "rules": {
        "react/react-in-jsx-scope": "error"
      }
    }
  ]
}
